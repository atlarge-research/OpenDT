{
  "name": "OpenDT (devcontainer)",
  "dockerComposeFile": [
    "../docker-compose.yml"
  ],
  "service": "opendt",
  "runServices": ["kafka", "opendt"],
  "workspaceFolder": "/app",
  "shutdownAction": "stopCompose",
  "overrideCommand": true,

  "containerEnv": {
    "OPENAI_API_KEY": ""  },

  "forwardPorts": [8080, 29092,8010,5500],

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-azuretools.vscode-docker",
        "EditorConfig.EditorConfig",
        "ms-toolsai.jupyter",
        "ms-toolsai.jupyter-renderers",
        "ms-toolsai.vscode-jupyter-cell-tags"
      ]
    }
  }
}
